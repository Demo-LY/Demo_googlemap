<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bggrayoneself"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/dContentLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- 我的账号 my account -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_grzx_top">

                <!-- 登陆后的 -->
                <RelativeLayout
                    android:id="@+id/myaccountinfor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/drug_distri_pading24"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/myaccountinfor_myaccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/line_space10"
                        android:text="My Account"
                        android:textColor="@color/itemwhite"
                        android:textSize="@dimen/font_size32" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/line_space16"
                        android:layout_toLeftOf="@+id/myaccountinfor_more"
                        android:src="@drawable/ico_erweima_bai" />

                    <ImageView
                        android:id="@+id/myaccountinfor_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ico_arrow_white" />
                </RelativeLayout>

                <!-- 未登录的 -->
                <Button
                    android:id="@+id/btn_userinfo_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bt_white"
                    android:paddingLeft="@dimen/line_space48"
                    android:paddingRight="@dimen/line_space48"
                    android:text="Login/Register"
                    android:textColor="@color/itemwhite"
                    android:textSize="@dimen/font_size32"
                    android:visibility="gone" />
            </RelativeLayout>

            <!-- 我的历史 my history -->

            <RelativeLayout
                android:id="@+id/myHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_item_bottom_select"
                android:padding="@dimen/drug_distri_pading24">


                <ImageView
                    android:id="@+id/history_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_my_track_nor" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ind_arrow" />

                <TextView
                    android:id="@+id/history_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/line_space16"
                    android:layout_toRightOf="@+id/history_img"
                    android:text="History"
                    android:textColor="@color/maindark_content"
                    android:textSize="@dimen/font_size32" />
            </RelativeLayout>

            <!-- 我的收藏 My Collection -->

            <RelativeLayout
                android:id="@+id/myCollection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/line_space32"
                android:background="@drawable/listview_item_bottom_select"
                android:padding="@dimen/drug_distri_pading24">


                <ImageView
                    android:id="@+id/collection_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_my_album_nor" />

                <TextView
                    android:id="@+id/collection_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/line_space16"
                    android:layout_toRightOf="@+id/collection_img"
                    android:text="Collection"
                    android:textColor="@color/maindark_content"
                    android:textSize="@dimen/font_size32" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ind_arrow" />

            </RelativeLayout>

            <!-- 离线地图 Offline Maps-->

            <RelativeLayout
                android:id="@+id/OfflineMaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_item_bottom_select"
                android:padding="@dimen/drug_distri_pading24">

                <ImageView
                    android:id="@+id/OfflineMaps_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/offline_map_icon_nor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/line_space16"
                    android:layout_toRightOf="@+id/OfflineMaps_iv"
                    android:text="Offline Maps"
                    android:textColor="@color/maindark_content"
                    android:textSize="@dimen/font_size32" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ind_arrow" />
            </RelativeLayout>

            <!-- 离线地图存储位置 -->

            <RelativeLayout
                android:id="@+id/InternalStorage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_item_bottom_select"
                android:padding="@dimen/drug_distri_pading24"
                android:layout_marginBottom="@dimen/line_space32">

                <ImageView
                    android:id="@+id/InternalStorage_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/offline_storage_icon_nor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/line_space16"
                    android:layout_toRightOf="@+id/InternalStorage_iv"
                    android:text="Offline Maps Internal Storage"
                    android:textColor="@color/maindark_content"
                    android:textSize="@dimen/font_size32" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ind_arrow" />
            </RelativeLayout>

            <!-- 设置 set -->

            <RelativeLayout
                android:id="@+id/Setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_item_bottom_select"
                android:padding="@dimen/drug_distri_pading24">

                <ImageView
                    android:id="@+id/Setting_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_set_up_nor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/line_space16"
                    android:layout_toRightOf="@+id/Setting_iv"
                    android:text="Offline Maps"
                    android:textColor="@color/maindark_content"
                    android:textSize="@dimen/font_size32" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ind_arrow" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
